    "servers": [
        {
            "url": "https://6beffa7f-c4e8-45e7-b9aa-e4a9ecc6e74d.mock.pstmn.io",
            "description": "Mockup server"
        }
    ],
    "paths":
    {
        "/api/competitors":
        {
            "get":
            {
                "description": "Gets all competitors for this tournament",
                "operationId": "listCompetitors",
                "responses":
                {
                    "200":
                    {
                        "description": "List of competitors",
                        "content":
                        {
                            "application/json": { "$ref": "#/components/schemas/Competitors" }
                        }
                    }
                }
            }
        },
        "/api/bracket":
        {
            "get":
            {
                "description": "Gets the tournament bracket",
                "operationId": "getBracket",
                "responses":
                {
                    "200":
                    {
                        "description": "Tournament bracket",
                        "content":
                        {
                            "application/json": { "$ref": "#/components/schemas/Bracket" }
                        }
                    }
                }
            }
        }
    },
    "components":
    {
        "schemas":
        {
            "Competitor":
            {
                "type": "object",
                "required": [
                    "id",
                    "name",
                    "taglines"
                ],
                "properties":
                {
                    "id": { "type": "string" },
                    "name": { "type": "string" },
                    "taglines": { "type": "string" },
                    "twitter": { "type": "string" },
                    "twitch": { "type": "string" }
                }
            },
            "Competitors":
            {
                "type": "object",
                "required": [
                    "version",
                    "profiles"
                ],
                "properties":
                {
                    "version": { "type": "string" },
                    "profiles":
                    {
                        "type": "array",
                        "items": { "$ref": "#/components/schemas/Competitor" }
                    }
                }
            },
            "Match":
            {
                "type": "object",
                "required": [
                    "mode",
                    "competitor1",
                    "score1",
                    "isCompleted"
                ],
                "properties":
                {
                    "mode": { "type": "string" },
                    "competitor1": { "type": "string" },
                    "competitor2": { "type": "string" },
                    "score1": { "type": "integer" },
                    "score2": { "type": "integer" },
                    "isCompleted": { "type": "boolean" }
                }
            },
            "Bracket":
            {
                "type": "object",
                "required": [
                    "version",
                    "qualifiers",
                    "semifinals",
                    "finals",
                    "podium"
                ],
                "properties":
                {
                    "version": { "type": "string" },
                    "qualifiers":
                    {
                        "type": "array",
                        "items": { "$ref": "#/components/schemas/Matc" }
                    },
                    "semifinals":
                    {
                        "type": "array",
                        "items": { "$ref": "#/components/schemas/Match" }
                    },
                    "finals":
                    {
                        "type": "array",
                        "items": { "$ref": "#/components/schemas/Match" }
                    },
                    "podium":
                    {
                        "type": "array",
                        "items": { "$ref": "#/components/schemas/Match" }
                    }
                }
            }
        }
    }
}